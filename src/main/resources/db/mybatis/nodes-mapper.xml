<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.trodix.duckcloud.core.persistance.dao.mappers.NodeMapper">

    <resultMap id="result_Node" type="Node">
        <result property="id" column="n_id" jdbcType="BIGINT" javaType="java.lang.Long" />
        <result property="parentId" column="n_parent_id" jdbcType="BIGINT" />
        <result property="typeId" column="n_type_id" jdbcType="BIGINT" />
    </resultMap>

    <sql id="fields_Node">
        n.id as n_id, n.parent_id as n_parent_id, n.type_id as n_type_id
    </sql>

    <sql id="select_node">
        SELECT <include refid="fields_Node" /> FROM nodes n
    </sql>

    <select id="findOne" resultMap="result_Node">
        <include refid="select_node" /> WHERE n.id = #{id}
    </select>

    <select id="findAll" resultMap="result_Node">
        <include refid="select_node" />
    </select>

    <insert id="insert" useGeneratedKeys="true">
        INSERT INTO nodes
        (
            parent_id, type_id
        )
        VALUES
        (
            #{parentId}, #{typeId}
        )
    </insert>

    <update id="update">
        UPDATE nodes SET parent_id = #{parentId}, type_id = #{typeId} WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM nodes WHERE id = #{id}
    </delete>

</mapper>